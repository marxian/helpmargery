<% layout('widget_layout') -%>

<div id="widget">

	<!-- About -->
	<div class="goto about">
		<div class="top">
			<h1><%= space.name %></h1>
		</div>
		<div class="vcenter">
			<p class="description"><%- space.description -%></p>

			<ul class="facilities">
				<li>Changing Rooms</li>
				<li>Wifi</li>
				<li>Free Parking</li>
			</ul>

			<div class="pictures">
				<img src="http://placehold.it/370x370" alt="venue photo">
			</div>

			<button data-goto="availability">Check Availability</button>
		</div>
	</div>

	<!-- Availability -->
	<div class="goto availability hide">
		<div class="top">
			<button data-goto="about">&lt;</button>
			<h1>Availability</h1>
		</div>
		<div class="vcenter">
			<div class="dropdown">
				<select name="day">
					<option value="day">Day</option>
					<option value="mon">Monday</option>
					<option value="tues">Tuesday</option>
					<option value="weds">Wednesday</option>
					<option value="thurs">Thursday</option>
					<option value="fri">Friday</option>
					<option value="sat">Saturday</option>
					<option value="sun">Sunday</option>
				</select>

				<select name="month">
					<option value="month">Month</option>
					<option value="jan">January</option>
					<option value="feb">February</option>
					<option value="mar">March</option>
					<option value="apr">April</option>
					<option value="may">May</option>
					<option value="june">June</option>
					<option value="july">July</option>
					<option value="aug">August</option>
					<option value="sep">September</option>
					<option value="oct">October</option>
					<option value="nov">November</option>
					<option value="dec">December</option>
				</select>

				<select name="year">
					<option value="year">Year</option>
					<option value="2015">2015</option>
					<option value="2016">2016</option>
					<option value="2017">2017</option>
				</select>
			</div>

			<% include calendar %>
		</div>
	</div>

	<div class="footer">
		Square space thing
		<!-- <img src="logo.png" /> -->
	</div>

</div>

<form method="POST" action="<%= space._id %>/book">
	From: <input name="start" value="2015-12-20T00:00:00.025Z" />
	<br>
	To: <input name="end" value="2015-11-20T16:01:10.025Z" />
	<br>
	Owner name: <input name="owner[name]" value="Alison" />
	<br>
	Owner email: <input name="owner[email]" value="Alison@danceclassesrus.com" />
	<br>
	Booker: <input name="booker[name]" value="Dance classes r us" />

	<button type="submit">Create booking</button>
</form>

<script type="text/javascript">
	window.space = <%- JSON.stringify(space) -%>;
</script>

<script type="text/javascript" src="/javascripts/widget.js"></script>
